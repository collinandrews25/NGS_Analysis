# =================================== Define Functions ===================================

def getCounts(initialSort, finalSort):
    for file in initialSort:
        firstFile = 1
        with open(inFilePath + file, 'r') as openedFile:  # Open file
            if firstFile == 1:
                count = openedFile
                print('Count:')
                print(count)


# ===================================== RUN THE CODE =====================================

counts = getCounts(inInitalSortFileNames, inFinalSortFileNames)
