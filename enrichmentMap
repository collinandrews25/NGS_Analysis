# ================================== Setup Residue List ==================================

# Set up the structure containing the residues in a tuple
residues = (('Alanine', 'A'), ('Arginine', 'R'), ('Asparagine', 'N'), \
            ('Aspartic Acid', 'D'), ('Cysteine', 'C'), ('Glutamic Acid', 'E'), \
            ('Glutamine', 'Q'), ('Glycine', 'G'), ('Histidine', 'H'), \
